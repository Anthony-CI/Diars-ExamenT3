
@{
    Layout = null;
}

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdPokemon</td>
                    <td>@item.Nombre</td>
                    <td>@item.Tipo</td>
                    <td>
                        <img height="100" src="~/Imagenes/@item.Imagen" />
                    </td>
                </tr>
            }

        </tbody>
    </table>

