
@{
    ViewData["Title"] = "Crear";
}

<h1>Crear Pokemon</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <div class="panel panel-primary">
                <div class="panel-heading text-center"><h3>Crear pokemon</h3></div>
                <div class="panel-body">

                    <form action="/Pokemon/Crear" method="post" enctype="multipart/form-data">

                        <div>
                            <label class="control-label">Nombre :</label>
                            <input class="form-control" type="text" name="Nombre" value="@Model.Nombre" />
                            @Html.ValidationMessage("Nombre")
                        </div>

                        <div>
                            <label class="control-label">Tipo :</label>
                            <select class="form-control" name="Tipo">
                                <option value="Agua">Agua</option>
                                <option value="Fuego">Fuego</option>
                                <option value="Tierra">Tierra</option>
                                <option value="Lucha">Lucha</option>
                                <option value="Siniestro">Siniestro</option>

                            </select>
                            @Html.ValidationMessage("Tipo")
                        </div>

                        <div class="form-group">
                            <label>Imagen</label>
                            <input type="file" name="Imagen" />
                        </div>
                        <br />

                        <button class="btn btn-primary"><span class="glyphicon glyphicon-saved"></span> Guardar</button>


                    </form>
                </div>

            </div>
        </div>

    </div>
</div>
